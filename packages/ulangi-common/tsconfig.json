{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "noImplicitAny": true,
    "declaration": true,
    "strictNullChecks": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ]
}

