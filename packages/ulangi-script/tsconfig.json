{
  "compilerOptions": {
    "lib": ["es6", "es5"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "strict": true,
    "strictNullChecks": true,
    "outDir": "bin",
    "rootDir": "src",
    "sourceMap": false,
    "target": "es6",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "configs.json"
  ]
}
